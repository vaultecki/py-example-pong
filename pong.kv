#:kivy 1.0.9

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size


<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right


    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        # pl1 score
        font_size: 70
        #font_name: "Comic"
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        # pl2 score
        font_size: 70
        #font_name: "Comic"
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    Label:
        # end game text
        font_size: 90
        #font_name: "Comic"
        color: 1,1,0,1
        markup: True
        center_x: root.center_x-30
        center_y: root.center_y
        top: root.top - 150
        text: str(root.ball.end_game_text)

    Label:
        # pl1 name
        font_size: 18
        #font_name: "Comic"
        center_x: root.width / 4
        down: 50
        text: str(root.player1.name)

    Label:
        # pl2 name
        font_size: 18
        #font_name: "Comic"
        center_x: root.width * 3 / 4
        down: 50
        text: str(root.player2.name)

    Button:
        # pause/play btn
        pos: -10, root.height-39
        size: root.width/2+10, 40
        on_press: root.on_press_pause_play()
        text: "pause/play"

    Button:
        # change control mode btn
        pos: root.width/2-3, root.height-39
        size: root.width/2+10, 40
        on_press: root.on_press_control_mode()
        text: "control mode: " + str(root.ball.control_mode)

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y



